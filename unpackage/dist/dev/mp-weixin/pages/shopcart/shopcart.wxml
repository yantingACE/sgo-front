<view class="cartContainer"><view class="title">购物车</view><view class="cartList"><block wx:for="{{shopCartList}}" wx:for-item="cart" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['changeIsCheck',['$0'],[[['shopCartList','id',cart.id]]]]]]]}}" class="{{['iconfont icon-xuanzhong',(cart.isChecked)?'selected':'']}}" bindtap="__e"></text><view class="shopItem"><image class="shopImg" src="{{cart.primaryPicUrl}}"></image><view class="shopInfo"><text>{{cart.name}}</text><text class="price">{{"￥"+cart.counterPrice}}</text></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['changeNum',['$0',1],[[['shopCartList','id',cart.id]]]]]]]}}" class="add" bindtap="__e">+</text><text class="count">{{cart.count}}</text><text data-event-opts="{{[['tap',[['changeNum',['$0',-1,index],[[['shopCartList','id',cart.id]]]]]]]}}" class="del" bindtap="__e">-</text></view></view></block></view><view class="cartFooter"><text data-event-opts="{{[['tap',[['changeIsCheckAll',['$event']]]]]}}" class="{{['iconfont icon-xuanzhong',isCheckAll&&'selected']}}" bindtap="__e"></text><text class="allSelected">{{"已选 "+checkedNum}}</text><view class="right"><text class="totalPrice">{{"合计: "+allMoney}}</text><text class="preOrder">下单</text></view></view></view>