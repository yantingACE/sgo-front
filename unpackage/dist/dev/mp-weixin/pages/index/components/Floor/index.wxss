.floor .floorImg {
  width: 100%;
  height: 350rpx;
}
.floor .floorScroll {
  height: 300rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.floor .floorScroll .item {
  width: 200rpx;
  margin-right: 20rpx;
}
.floor .floorScroll .item .single {
  display: block;
  width: 200rpx;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
}
.floor .floorScroll .item .itemImg {
  background-color: #aaa;
  width: 200rpx;
  height: 200rpx;
}
.floor .floorScroll .item .itemText {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /** 多行文本溢出...*/
  overflow: hidden;
}

